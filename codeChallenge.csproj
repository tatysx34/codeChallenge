<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <GenerateProgramFile>false</GenerateProgramFile>
    <IsTestProject>true</IsTestProject>   <!-- Mark this as a test project -->
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.3.2" />  <!-- Test SDK -->
    <PackageReference Include="xunit" Version="2.4.2" />  <!-- xUnit package -->
    <PackageReference Include="xunit.runner.visualstudio" Version="2.4.5" />  <!-- Runner for Visual Studio / VS Code -->
    <PackageReference Include="coverlet.collector" Version="3.1.2" />  <!-- Code coverage -->
  </ItemGroup>

</Project>